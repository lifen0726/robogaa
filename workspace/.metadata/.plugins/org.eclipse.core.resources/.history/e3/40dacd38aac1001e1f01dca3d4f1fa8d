<form id="registrationForm">
    <h2>註冊會員</h2>
    <label for="username">用戶名稱:</label>
    <input type="text" id="username" name="username" required>

    <label for="phone">電話:</label>
    <input type="tel" id="phone" name="phone" required>

    <label for="password">密碼:</label>
    <input type="password" id="password" name="password" required>

    <button type="button" id="send" onclick="register()">註冊</button>
</form>

<script>
    function register() {
        var username = document.getElementById('username').value;
        var phone = document.getElementById('phone').value;
        var password = document.getElementById('password').value;
        var form = document.getElementById("registrationForm");
        var send = document.getElementById("send");

        send.addEventListener('click', function(e){
            e.preventDefault();
            var formData = new FormData(form);

            var userName = formData.get("userName");
            console.log('userName:' + userName);
            var phone = formData.get("phone");
            console.log('phone:' + phone);
            var password = formData.get("password");
            console.log('password:' + password);
            
            var xh = new XMLHttpRequest();
            xh.open('post','/members/add',true);
            xh.send(formData);

            xh.onload = function(){
               console.log('status:'+ xh.status);
               console.log('responseText:'+ xh.responseText);
            }
        });
        // 在這裡可以添加後端處理邏輯，比如使用AJAX將用戶信息發送到後端API
        // 這裡僅是前端演示，實際應用中需要使用安全的方式處理用戶信息

        alert('註冊成功！'); // 這裡可以改成其他處理成功的操作
    }
</script>

